  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }

    function plusSlides(button, n) {
      const slideshow = button.parentElement;
      let slides = slideshow.getElementsByClassName("slide");
      let index = [...slides].findIndex(slide => slide.style.display === "block");
      if (index === -1) index = 0;
      slides[index].style.display = "none";
      let newIndex = (index + n + slides.length) % slides.length;
      slides[newIndex].style.display = "block";
    }

    document.querySelectorAll(".slideshow-container").forEach(slideshow => {
      let slides = slideshow.getElementsByClassName("slide");
      if (slides.length > 0) slides[0].style.display = "block";
    });
  </script>

